{
  "include": ["app/**/*.ts", "app/**/*.d.ts", "app/**/*.tsx"],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "target": "es2021",
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true
    }
  }
}
